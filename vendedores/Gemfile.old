source 'https://rubygems.org'

gem 'rails', '3.2.13'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'sqlite3' # No hace falta uso mysql

gem 'mysql2'
# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# Realiza paginación de la salida 
gem 'will_paginate', '3.0.3'

# Tratamiento de ficheros
gem 'paperclip', '3.3.1'

# Formato de texto
gem 'formatize', '1.1.0'
gem 'bluecloth', '2.2.0'

# Búsquedas (requiere polyamorous 0.5.0)
gem 'meta_search', '1.1.3'

# Selección de países
gem 'currencies', '0.4.2'
gem 'countries', '0.9.2', :require => 'iso3166'
# To use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

# Use unicorn as the app server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'debugger'

# Para instalar el javascript runtimes
gem 'execjs'
gem 'therubyracer'

#Instalo con sudo la gem magic_encoding versión 0.0.2

# Gema para realizar pagos
# instala sus dependencias: 
# active_utils (2.0.2), money (5.1.1),  mini_portile (0.5.3), nokogiri (1.6.1),  
gem 'activemerchant', '1.31.1'

# Gema para el pago en euros
gem 'eu_central_bank', '0.3.5'

# Gema para Control Seguridad. Sin requerimientos
gem 'authlogic', '3.2.0'

# Gema para mostrar objetos en forma de arbol
# Usada en los Post del Forum
gem 'make_like_a_tree', '1.0.3'

# Gema para mostrar los tags
# Usada en Tagging Support
gem 'acts-as-taggable-on', '2.3.3'
