<table>
  <tr>
    <th><a href="?sort_by=publisher_id">Editores</a></th>
    <th><a href="?sort_by=title">Título</a></th>
    <th>Palabras Clave</th>
    <th><a href="?sort_by=isbn">ISBN</a></th>
    <th colspan="3"></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= h book.publisher.name %></td>
    <td><%= h book.title %></td>
        <td><%= display_tags book %></td>
    <td><%= h book.isbn %></td>
    <td><%= link_to 'Mostrar', :action => 'show', :id => book %></td>
    <td><%= link_to 'Editar', :action => 'edit', :id => book  %></td>
    <td><%= button_to 'Borrar', { :action => 'destroy', :id => book },
                      :confirm => "Seguro que desea borrar el libro #{book.title}?" %></td>
  </tr>
<% end %>
</table>
<br/>
<%= will_paginate @books, :page_links => false, :link_separator => ' | ',
                          :previous_label => 'Página previa', :next_label => 'Siguiente página' %>
<p><%= link_to 'Añadir un libro nuevo', :action => 'new' %></p>
